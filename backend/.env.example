# TYFOR Coach Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=tyfor_coach

# Security Keys - IMPORTANT: Generate new secure keys for production
SECRET_KEY=your-flask-secret-key-here-minimum-32-characters
SECURITY_PASSWORD_SALT=your-security-salt-here-minimum-16-characters

# JWT Configuration
JWT_EXPIRATION=86400

# Flask Environment Settings
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=app.py

# API Configuration
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Optional: External API Keys (if needed)
# EXTERNAL_API_KEY=your-external-api-key-here
# SMTP_SERVER=your-smtp-server
# SMTP_PORT=587
# SMTP_USERNAME=your-email@domain.com
# SMTP_PASSWORD=your-email-password

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=0
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/prod_db
